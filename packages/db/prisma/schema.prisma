generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id            Int            @id @default(autoincrement())
  deviceId      String         @unique
  pushToken     String?        @unique
  subscriptions Subscription[]
}

model Team {
  id       Int       @id
  name     String    @unique
  pitchers Pitcher[]
}

model Pitcher {
  id            Int            @id
  name          String
  team          Team           @relation(fields: [teamId], references: [id])
  teamId        Int
  homeGames     Game[]         @relation("HomePitcher")
  awayGames     Game[]         @relation("AwayPitcher")
  subscriptions Subscription[]

  @@fulltext([name])
}

model Game {
  id            Int      @id
  date          DateTime
  homePitcher   Pitcher? @relation("HomePitcher", fields: [homePitcherId], references: [id])
  homePitcherId Int?
  awayPitcher   Pitcher? @relation("AwayPitcher", fields: [awayPitcherId], references: [id])
  awayPitcherId Int?
}

model Subscription {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  pitcher   Pitcher @relation(fields: [pitcherId], references: [id])
  pitcherId Int
  enabled   Boolean
}
